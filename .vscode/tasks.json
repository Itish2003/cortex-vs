{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch:esbuild",
			"group": "build",
			"problemMatcher": [
				"$esbuild-watch"
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		}
	],
	"problemMatcher": [
		{
			"name": "esbuild-watch",
			"background": {
				"activeOnStart": true,
				"beginsPattern": "^[watch] build started$",
				"endsPattern": "^[watch] build finished$"
			},
			"pattern": {
				"regexp": "^\\s*(?:âœ˜ [ERROR] )?(.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"message": 4
			}
		}
	]
}