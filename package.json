{
  "name": "cortex-vs",
  "displayName": "cortex-vscode-plugin",
  "description": "An agentic learning framework designed to grow alongside the developer and make them better over time by acting as a mentor who is aware of your progress and habits.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cortex-vs.connect",
        "title": "Cortex: Connect"
      },
      {
        "command": "cortex-vs.disconnect",
        "title": "Cortex: Disconnect"
      }
    ],
    "configuration": {
      "title": "Cortex Mentor",
      "properties": {
        "cortex.backendUrl": {
          "type": "string",
          "default": "ws://localhost:8000/ws",
          "description": "The WebSocket URL of the Cortex Mentor backend."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cortex-sidebar",
          "title": "Cortex Mentor",
          "icon": "$(hubot)"
        }
      ]
    },
    "views": {
      "cortex-sidebar": [
        {
          "type": "webview",
          "id": "cortex.chatView",
          "name": "Mentor Chat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}